<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40dp"/>
    <TextView
        android:id="@+id/math_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="40dp"
        android:singleLine="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvClear"
                android:text="CE">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvOpen"
                android:text="(">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvClose"
                android:text=")">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvDivision"
                android:text="/">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvOne"
                android:text="1">

            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvTwo"
                android:text="2">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvThree"
                android:text="3">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvMultiplication"
                android:text="*">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvFour"
                android:text="4">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvFive"
                android:text="5">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvSix"
                android:text="6">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvMinus"
                android:text="-">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvSeven"
                android:text="7">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvEight"
                android:text="8">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvNine"
                android:text="9">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvAdd"
                android:text="+">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvDot"
                android:text=".">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvZero"
                android:text="0">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/tvBack"
                android:text="Back">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/tvEquals"
                android:text="=">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>